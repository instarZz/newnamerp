{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
{% include "common/_navbar.html.twig" %}
<div class="container-profil">
    <div>
        <h2>Bienvenue sur votre profil !</h2>
    </div>

    <div class="bigcontainer-grey">
        <div class="container-grey">
            <a href="{{path('app_profil_edit', {'id': app.user.id})}}"><i id="icon-edit" class="fas fa-pen"></i></a>
            <a href="{{path('app_profil_delete', {'id': app.user.id})}}"><i id="icon-delete" class="fas fa-trash"></i></a>
            <p>Pseudo : {{app.user.username}}</p>
            <p>Nom RP : {{app.user.lastname}}</p>
            <p>Prénom RP : {{app.user.firstname}}</p>
            <p>Date de naissance RP : {{app.user.birthday|date("m/d/Y")}}</p>
            <p>Téléphone RP : {{app.user.phoneNumber}} </p>
        </div>
    {# <pre>
        {{ dump(app.user) }}
    </pre> #}
        <div class="container-grey">
            <a href="{{path('app_job_add', {'id': app.user.id})}}"><i class="fas fa-plus-square add-cars"></i></a>
            <p>Entreprise : {{app.user.job}}</p>
        </div>

        <div class="container-grey">
            <a href="{{path('app_gang_add', {'id': app.user.id})}}"><i class="fas fa-plus-square add-cars"></i></a>
            <p>Organisation / Gang : {{app.user.gang}} </p>
        </div>

        <div class="container-grey">
            <p>Compte en banque : </p>
            <p>Portefeuille :  </p>
            <p>Argent sale : </p>
        </div>
        <div class="container-grey">
            <a href="{{path('app_cars_add', {'id': app.user.id})}}"><i class="fas fa-plus-square add-cars"></i></a>
            <ul>Véhicules :
        {% for car in user.carId %}
            <li>{{car}}</li> 
        {% endfor %}
            </ul>
        </div>
        <div class="container-grey">
            <a href="{{path('app_weapons_add', {'id': app.user.id})}}"><i class="fas fa-plus-square add-weapons"></i></a>
            <ul>Armes : 
            {% for weapon in user.weapon %}
                <li>{{weapon}}</li>
            {% endfor %}
            </ul>
        </div>
    </div>

</div>

{% endblock %}
