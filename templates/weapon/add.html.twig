{% extends 'base.html.twig' %}

{% block title %}Ajout d'un job{% endblock %}

{% block body %}
{% include "common/_navbar.html.twig" %}
<div class="container-form">
    <div class="container-form-edit">
        <h1>Ajout d'armes</h1>
        
        {{ form_start(form) }}
